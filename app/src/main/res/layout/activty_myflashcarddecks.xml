<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:weightSum="3">

            <TextView
                android:text="My Subjects"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@android:color/background_light"
                android:textSize="28dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textStyle="normal|bold|italic"
                android:id="@+id/titleText" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/backimageicon"
                android:id="@+id/backButtonDecks"
                android:layout_weight="1"

                android:scaleType="fitCenter"
                android:background="@android:color/background_dark"
                android:elevation="0dp"
                android:layout_gravity="center_vertical"
                android:onClick="backHomeClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#006666"
            android:weightSum="10">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#006666"></LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/myDecksListView"
                android:layout_weight="8"
                android:background="@android:color/white" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#006666"></LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>