<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:background="#006666">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:weightSum="3">

            <TextView
                android:text="Add New Flashcards"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@android:color/background_light"
                android:textSize="28dp"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="normal|bold|italic"
                android:id="@+id/textView" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/backimageicon"
                android:id="@+id/backButtonDecks"
                android:layout_weight="1"

                android:scaleType="fitCenter"
                android:background="@android:color/background_dark"
                android:elevation="0dp"
                android:layout_gravity="center_vertical"
                android:onClick="backHomeClick" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:text="Create a New Deck And Subject"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_manage"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:onClick="createNewDeckButton" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="Add Deck To a Subject"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                android:id="@+id/imageButton4"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:onClick="addDeckToSubjectButton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="center_vertical|center_horizontal">


            <TextView
                android:text="Add Cards to a Deck"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_add"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:onClick="addCardToDeckButton" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>