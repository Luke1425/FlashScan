<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="#006666">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/flashlogo"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.85" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/myflashcardicon"
                android:id="@+id/myFlashCardsButton"
                android:scaleType="centerCrop"

                android:backgroundTint="#006666"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:onClick="myFlashCardClick" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/addnewcardicon"
                android:id="@+id/addNewFlashcardButton"
                android:layout_weight="1"
                android:backgroundTint="#006666"
                android:scaleType="centerCrop"
                android:layout_margin="15dp"
                android:onClick="addNewFlashCardClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/studymodeimageicon"
                android:id="@+id/studyModeButton"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:backgroundTint="#006666"
                android:scaleType="centerCrop"
                android:onClick="studyModeButton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/settingsimageicon"
                android:id="@+id/settingsButton"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:backgroundTint="#006666"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>